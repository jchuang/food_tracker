<% end %>

<%= form_for(@item) do |f| %>

  <div class="field">
    <p>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </p>
  </div>

  <div class="field">
    <p>
      <%= f.label :description %>
      <%= f.text_field :description %>
    </p>
  </div>

  <div class="field">
    <p>
      <%= f.label :quantity %>
      <%= f.text_field :quantity %>
    </p>
  </div>

  <div class="submit">
    <%= f.submit "Add Item" %>
  </div>

<% end %>
